<configuration>
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
        <encoder>
            <pattern>%d [%-15.15t] %-5p %-30.30c{1} - %m%n</pattern>
        </encoder>
    </appender>

    <appender class="ru.gang.logdoc.appenders.LogdocUdpAppender" name="LOGDOC">
        <host>localhost</host>
        <port>5455</port>
    </appender>

<!--    <appender class="ru.gang.logdoc.appenders.LogdocTcpAppender" name="LOGDOC">-->
<!--        <host>localhost</host>-->
<!--        <port>5456</port>-->
<!--    </appender>-->

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGDOC"/>
    </root>

</configuration>
